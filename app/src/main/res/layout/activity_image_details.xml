<?xml version="1.0" encoding="utf-8"?>
<ScrollView

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".features.pixabay_details.view.ImageDetailsActivity">

    <androidx.appcompat.widget.LinearLayoutCompat

        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/appCompactLargeImage"
            app:srcCompat="@mipmap/ic_launcher"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>




        <androidx.appcompat.widget.LinearLayoutCompat
            android:orientation="vertical"
            android:layout_margin="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_margin="8dp"
                android:id="@+id/largeImageUser"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:text="@string/dash"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:textColor="@color/black"
                android:textStyle="bold"
               android:layout_marginStart="8dp"
                android:textSize="16sp"
                android:text="@string/image_s_tags"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_marginStart="8dp"
                android:id="@+id/largeImageTags"
                android:textSize="16sp"
                android:text="@string/dash"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:drawablePadding="8dp"
                android:drawableStart="@drawable/ic_baseline_thumb_up_24"
                android:id="@+id/likes"
                android:textSize="16sp"
                android:layout_margin="8dp"
                android:text="@string/dash"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:drawablePadding="8dp"
                android:drawableStart="@drawable/ic_baseline_comment_24"
                android:id="@+id/comments"
                android:textSize="16sp"
                android:layout_margin="8dp"
                android:text="@string/dash"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:drawablePadding="8dp"
                android:drawableStart="@drawable/ic_baseline_file_download_24"
                android:id="@+id/downloads"
                android:textSize="16sp"
                android:layout_margin="8dp"
                android:text="@string/dash"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </androidx.appcompat.widget.LinearLayoutCompat>




    </androidx.appcompat.widget.LinearLayoutCompat>











</ScrollView>